# Environment Variables
# Copy this file to .env.local and fill in your values

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/portal"

# Application URLs
NEXT_PUBLIC_SITE_URL="https://portal.example.com"

# Authentication
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Logging & Storage
LOG_ARCHIVE_BUCKET="portal-audit-logs"
LOG_ARCHIVE_PREFIX="portal"
LOG_ARCHIVE_SSE="AES256"
LOG_ARCHIVE_STORAGE_CLASS="STANDARD_IA"
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-access-key"
# Optional session token if using temporary credentials
AWS_SESSION_TOKEN=""

# Backup configuration
BACKUP_BUCKET="portal-backups"
BACKUP_PREFIX="portal"

# API Keys
OPENAI_API_KEY="your-openai-api-key"
STRIPE_SECRET_KEY="your-stripe-secret-key"

# External Services
RESEND_API_KEY="your-resend-api-key"
